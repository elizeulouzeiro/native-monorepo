{
  "name": "native-monorepo",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "author": "elizeumatheus <elizeumatheus16@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ws": "yarn workspace",
    "app:start": "run-s \"ws {1} start\" --",
    "app:clear": "run-s \"ws {1} start --reset-cache\" --",
    "app:android": "run-s \"ws {1} android\" --",
    "app:ios": "run-s \"ws {1} ios\" --",
    "build": "lerna run --parallel build",
    "dev": "lerna run --parallel dev"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.22.2",
    "typescript": "^3.9.7"
  }
}
